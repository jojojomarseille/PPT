

    <section class="home">
    </section>

    <section >
    <div style="height: 300px">
        <!-- just to make scrolling effect possible -->
			<h2 class="myH2">Bienvenu</h2>
			<p class="myP">inscrit toi et crée tes listes de piscines personnalisés, d'enregistrer leurs horaires et de tjr savoir si ta piscine preferée est ouverte. </p>
			<%# <p class="myP">I took inspiration from  ABDO STEIF (<a href="https://codepen.io/abdosteif/pen/bRoyMb?editors=1100">https://codepen.io/abdosteif/pen/bRoyMb?editors=1100</a>)
			and Dicson <a href="https://codepen.io/dicson/pen/waKPgQ">(https://codepen.io/dicson/pen/waKPgQ)</a></p> %>
			<p class="myP">Deja plus de <%=@piscines.count%> piscines ajoutées! Trouve la tienne!</p>
			<%# <p class="myP">Albi</p> %>
    </section>

    <section >
      <div class="grille-cartes">
        <% @piscines.each do |piscine| %>
        <% horaires = piscine.format_heure_minutes %>

        <div class="piscine-card">
          <div class="piscine-photo-bloc">
            <div class="piscine-photo"> 
              <%# <%= image_tag('gettyimages-140872616-612x612.jpg')%>
              <%= image_tag url_for(piscine.image) if piscine.image.attached? %>
            </div>
          </div>
          <div class="piscine-details">
            <h2 class="piscine-titre"><%= piscine.name %></h2>
            <p class="piscine-adresse"><%= piscine.adress %> <%= piscine.cp %> <%= piscine.ville %></p>
            <h3 class="piscine-sous-titre">Horaires:</h3>
            <ul class="piscine-horaires">
              <li>Lundi: <%=horaires[0]%> - <%=horaires[1]%></li>
              <li>Mardi: <%=horaires[2]%> - <%=horaires[3]%></li>
              <li>Mercredi: <%=horaires[4]%> - <%=horaires[5]%></li>
              <li>Jeudi: <%=horaires[6]%> - <%=horaires[7]%></li>
              <li>Vendredi: <%=horaires[8]%> - <%=horaires[9]%></li>
              <li>Samedi: <%=horaires[10]%> - <%=horaires[11]%></li>
              <li>Dimanche: <%=horaires[12]%> - <%=horaires[13]%></li>
            </ul>
            <a href="piscines/<%=piscine.id%>" class="piscine-bouton">Detail</a>
          </div>
        </div>        
        <%end%>
       
      </div>
       <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </section>


